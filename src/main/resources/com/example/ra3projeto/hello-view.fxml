<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ra3projeto.HelloController" styleClass="root" stylesheets="@styles.css">
    <TabPane fx:id="tabPane" layoutX="0" layoutY="0" prefWidth="900" prefHeight="600">
        
        <!-- TAB VEÍCULOS -->
        <Tab fx:id="tabCadastroVeiculos" text="Cadastro Veículos" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="🚗 Cadastro de Veículos" styleClass="title-label"/>
                    
                    <GridPane alignment="CENTER" hgap="20" vgap="20" prefWidth="650" styleClass="grid-pane">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="130" prefWidth="130"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="280" prefWidth="280"/>
                            <ColumnConstraints hgrow="NEVER" minWidth="220" prefWidth="220"/>
                        </columnConstraints>
                        
                        <!-- Marca -->
                        <Label text="Marca:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                        <TextField fx:id="marcaField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                                   promptText="Digite a marca do veículo..." styleClass="text-field"/>
                        <Label text="(min. 2 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="helper-label"/>

                        <!-- Modelo -->
                        <Label text="Modelo:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                        <TextField fx:id="modeloField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                                   promptText="Digite o modelo do veículo..." styleClass="text-field"/>
                        <Label text="(min. 2 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="helper-label"/>

                        <!-- Cor -->
                        <Label text="Cor:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                        <TextField fx:id="corField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                   promptText="Digite a cor do veículo..." styleClass="text-field"/>
                        <Label text="(min. 3 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="helper-label"/>

                        <!-- Ano -->
                        <Label text="Ano:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                        <TextField fx:id="anoField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                                   promptText="Digite o ano (ex: 2024)" styleClass="text-field"/>
                        <Label text="(1950 a 2026)" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="helper-label"/>

                        <!-- Valor Diária -->
                        <Label text="Valor/Dia:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
                        <TextField fx:id="valorDiariaField" GridPane.columnIndex="1" GridPane.rowIndex="4" 
                                   promptText="Digite o valor (ex: 120.50)" styleClass="text-field"/>
                        <Label text="(R$ 0,01 a R$ 10.000)" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="helper-label"/>
                    </GridPane>
                    
                    <!-- Botão de salvar -->
                    <Button text="💾 Salvar Veículo" onAction="#salvarVeiculo" styleClass="button" prefWidth="250"/>
                </VBox>
            </ScrollPane>
        </Tab>
        
        <Tab fx:id="tabEditarVeiculos" text="Gerenciar Veículos" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="🔧 Gerenciar Veículos" styleClass="title-label"/>
                    <Label text="Selecione um veículo da lista para editar ou remover" styleClass="subtitle-label"/>
                    <ListView fx:id="listaVeiculos" prefWidth="750" prefHeight="450" styleClass="list-view"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- TAB USUÁRIOS -->
        <Tab fx:id="tabCadastroUsuarios" text="Cadastro Usuários" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="👤 Cadastro de Usuários" styleClass="title-label"/>
                    
                    <GridPane alignment="CENTER" hgap="20" vgap="20" prefWidth="650" styleClass="grid-pane">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="130" prefWidth="130"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="280" prefWidth="280"/>
                            <ColumnConstraints hgrow="NEVER" minWidth="220" prefWidth="220"/>
                        </columnConstraints>
                        
                        <!-- Nome -->
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                        <TextField fx:id="nomeUsuarioField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                                   promptText="Digite o nome completo..." styleClass="text-field"/>
                        <Label text="(min. 2 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="helper-label"/>

                        <!-- Email -->
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                        <TextField fx:id="emailUsuarioField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                                   promptText="Digite o email..." styleClass="text-field"/>
                        <Label text="(formato: email@dominio.com)" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="helper-label"/>

                        <!-- Telefone -->
                        <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                        <TextField fx:id="telefoneUsuarioField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                   promptText="Digite o telefone..." styleClass="text-field"/>
                        <Label text="(formato: (11) 99999-9999)" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="helper-label"/>

                        <!-- CPF -->
                        <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                        <TextField fx:id="cpfUsuarioField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                                   promptText="Digite o CPF..." styleClass="text-field"/>
                        <Label text="(formato: 000.000.000-00)" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="helper-label"/>
                    </GridPane>
                    
                    <!-- Botão de salvar -->
                    <Button text="👤 Salvar Usuário" onAction="#salvarUsuario" styleClass="button success" prefWidth="250"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <Tab fx:id="tabGerenciarUsuarios" text="Gerenciar Usuários" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="👥 Gerenciar Usuários" styleClass="title-label"/>
                    <Label text="Selecione um usuário da lista para editar ou remover" styleClass="subtitle-label"/>
                    <ListView fx:id="listaUsuarios" prefWidth="750" prefHeight="450" styleClass="list-view"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- TAB PROPRIETÁRIOS -->
        <Tab fx:id="tabCadastroProprietarios" text="Cadastro Proprietários" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="🏢 Cadastro de Proprietários" styleClass="title-label"/>
                    
                    <GridPane alignment="CENTER" hgap="20" vgap="20" prefWidth="650" styleClass="grid-pane">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="130" prefWidth="130"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="280" prefWidth="280"/>
                            <ColumnConstraints hgrow="NEVER" minWidth="220" prefWidth="220"/>
                        </columnConstraints>
                        
                        <!-- Nome -->
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                        <TextField fx:id="nomeProprietarioField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                                   promptText="Digite o nome completo..." styleClass="text-field"/>
                        <Label text="(min. 2 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="helper-label"/>

                        <!-- Email -->
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                        <TextField fx:id="emailProprietarioField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                                   promptText="Digite o email..." styleClass="text-field"/>
                        <Label text="(formato: email@dominio.com)" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="helper-label"/>

                        <!-- Telefone -->
                        <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                        <TextField fx:id="telefoneProprietarioField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                   promptText="Digite o telefone..." styleClass="text-field"/>
                        <Label text="(formato: (11) 99999-9999)" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="helper-label"/>

                        <!-- CPF -->
                        <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                        <TextField fx:id="cpfProprietarioField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                                   promptText="Digite o CPF..." styleClass="text-field"/>
                        <Label text="(formato: 000.000.000-00)" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="helper-label"/>

                        <!-- Endereço -->
                        <Label text="Endereço:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
                        <TextField fx:id="enderecoField" GridPane.columnIndex="1" GridPane.rowIndex="4" 
                                   promptText="Digite o endereço completo..." styleClass="text-field"/>
                        <Label text="(min. 5 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="helper-label"/>
                    </GridPane>
                    
                    <!-- Botão de salvar -->
                    <Button text="🏢 Salvar Proprietário" onAction="#salvarProprietario" styleClass="button warning" prefWidth="250"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <Tab fx:id="tabGerenciarProprietarios" text="Gerenciar Proprietários" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="🏪 Gerenciar Proprietários" styleClass="title-label"/>
                    <Label text="Selecione um proprietário da lista para editar ou remover" styleClass="subtitle-label"/>
                    <ListView fx:id="listaProprietarios" prefWidth="750" prefHeight="450" styleClass="list-view"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <!-- TAB RESERVAS -->
        <Tab fx:id="tabCadastroReservas" text="Cadastro Reservas" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="📋 Cadastro de Reservas" styleClass="title-label"/>
                    
                    <GridPane alignment="CENTER" hgap="20" vgap="20" prefWidth="650" styleClass="grid-pane">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="130" prefWidth="130"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="280" prefWidth="280"/>
                            <ColumnConstraints hgrow="NEVER" minWidth="220" prefWidth="220"/>
                        </columnConstraints>
                        
                        <!-- Código -->
                        <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                        <TextField fx:id="codigoReservaField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                                   promptText="Digite o código da reserva..." styleClass="text-field"/>
                        <Label text="(min. 3 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="helper-label"/>

                        <!-- CPF Usuário -->
                        <Label text="CPF Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                        <TextField fx:id="cpfUsuarioReservaField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                                   promptText="Digite o CPF do usuário..." styleClass="text-field"/>
                        <Label text="(formato: 000.000.000-00)" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="helper-label"/>

                        <!-- Veículo -->
                        <Label text="Veículo:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                        <TextField fx:id="veiculoInfoField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                                   promptText="Digite as informações do veículo..." styleClass="text-field"/>
                        <Label text="(min. 3 caracteres)" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="helper-label"/>

                        <!-- Valor Total -->
                        <Label text="Valor Total:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                        <TextField fx:id="valorTotalField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                                   promptText="Digite o valor total..." styleClass="text-field"/>
                        <Label text="(R$ 0,00 a R$ 100.000)" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="helper-label"/>
                    </GridPane>
                    
                    <!-- Botão de salvar -->
                    <Button text="📋 Salvar Reserva" onAction="#salvarReserva" styleClass="button danger" prefWidth="250"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <Tab fx:id="tabGerenciarReservas" text="Gerenciar Reservas" closable="false">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 40;">
                    <Label text="📊 Gerenciar Reservas" styleClass="title-label"/>
                    <Label text="Selecione uma reserva da lista para editar ou remover" styleClass="subtitle-label"/>
                    <ListView fx:id="listaReservas" prefWidth="750" prefHeight="450" styleClass="list-view"/>
                </VBox>
            </ScrollPane>
        </Tab>
        
    </TabPane>
</VBox>
